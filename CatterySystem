            <div className="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center text-white">
              <Cat size={18} />
            </div>
            <span className="font-bold text-slate-800">BUILDING</span>
         </div>
         <button onClick={() => setIsMobileMenuOpen(!isMobileMenuOpen)}>
           {isMobileMenuOpen ? <X /> : <Menu />}
         </button>
      </div>

      {/* Mobile Menu Overlay */}
      {isMobileMenuOpen && (
        <div className="lg:hidden fixed inset-0 bg-white z-40 pt-20 px-6 space-y-4">
          <NavItem id="dashboard" label="ç¸½è¦½å„€è¡¨æ¿" icon={Settings} />
          <NavItem id="breeding" label="ç¹è‚²èˆ‡è¡€çµ±" icon={Dna} />
          <NavItem id="health" label="å¥åº·ç®¡ç†" icon={Syringe} />
          <NavItem id="contracts" label="åˆç´„èˆ‡ä¿å›º" icon={FileText} />
          <NavItem id="crm" label="å®¶é•·å›è¨ª" icon={Users} />
        </div>
      )}

      {/* Main Content Area */}
      <main className="flex-1 p-4 lg:p-10 mt-16 lg:mt-0 overflow-y-auto">
        <div className="max-w-6xl mx-auto">
          {activeTab === 'dashboard' && <DashboardView />}
          {activeTab === 'breeding' && <BreedingView />}
          {activeTab === 'health' && <HealthView />}
          {activeTab === 'contracts' && <ContractsView />}
          {activeTab === 'crm' && <CRMView />}
