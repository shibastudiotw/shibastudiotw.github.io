          <Users className="text-orange-500" /> å®¶é•·å›è¨ªè¿½è¹¤ç³»çµ±
        </h2>
        <button className="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-indigo-700">
          ç™»è¨˜æ–°å®¶é•·
        </button>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
         {/* Owner List */}
         <div className="lg:col-span-2 space-y-4">
            {MOCK_OWNERS.map(owner => (
              <Card key={owner.id} className="flex flex-col md:flex-row md:items-center justify-between gap-4">
                 <div className="flex items-start gap-4">
                    <div className="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center text-orange-600 font-bold">
                      {owner.name[0]}
                    </div>
                    <div>
                      <h3 className="font-bold text-slate-800">{owner.name} <span className="text-xs font-normal text-slate-400 ml-2">{owner.phone}</span></h3>
                      <p className="text-sm text-slate-600 mt-1">æ“æœ‰è²“éš»ï¼š<span className="font-medium text-indigo-600">{owner.cat}</span></p>
                      <p className="text-xs text-slate-400 mt-1 bg-slate-100 inline-block px-2 py-0.5 rounded">å‚™è¨»ï¼š{owner.note}</p>
                    </div>
                 </div>
                 
                 <div className="flex flex-col items-end gap-2">
                    <div className="text-sm text-slate-500">ä¸Šæ¬¡è¯ç¹«ï¼š{owner.lastContact}</div>
                    <div className="flex items-center gap-2">
                       <span className="text-xs font-bold text-rose-500 flex items-center gap-1">
                          <Calendar size={12}/> ä¸‹æ¬¡ï¼š{owner.nextContact}
                       </span>
                       <button className="px-3 py-1 bg-white border border-slate-300 text-slate-600 text-sm rounded hover:bg-slate-50">æŸ¥çœ‹å°è©±</button>
                       <button className="px-3 py-1 bg-indigo-600 text-white text-sm rounded hover:bg-indigo-700">å®Œæˆå›è¨ª</button>
                    </div>
                 </div>
              </Card>
            ))}
         </div>

         {/* Follow Up Strategy Sidebar */}
         <div className="space-y-4">
            <Card className="bg-indigo-50 border-indigo-100">
              <h3 className="font-bold text-indigo-800 mb-3 flex items-center gap-2">
                <Heart size={18} /> æ¨™æº–å›è¨ªæµç¨‹
              </h3>
              <div className="relative border-l-2 border-indigo-200 ml-2 space-y-6 pl-6 py-2">
                 <div className="relative">
                   <div className="absolute -left-[31px] w-4 h-4 rounded-full bg-indigo-400 border-2 border-white"></div>
                   <h4 className="font-bold text-sm text-indigo-700">ç¬¬ 1 å¤©ï¼šæŠµé”é—œæ‡·</h4>
                   <p className="text-xs text-indigo-600 mt-1">ç¢ºèªé£²é£Ÿã€æ’æ³„ã€ç²¾ç¥ç‹€æ³ã€‚</p>
                 </div>
                 <div className="relative">
                   <div className="absolute -left-[31px] w-4 h-4 rounded-full bg-indigo-400 border-2 border-white"></div>
                   <h4 className="font-bold text-sm text-indigo-700">ç¬¬ 7 å¤©ï¼šé©æ‡‰æœŸçµæŸ</h4>
                   <p className="text-xs text-indigo-600 mt-1">ç¢ºèªæ˜¯å¦è¦ªäººã€æ˜¯å¦éœ€è¦æ›´æ›é£¼æ–™ã€‚</p>
                 </div>
                 <div className="relative">
                   <div className="absolute -left-[31px] w-4 h-4 rounded-full bg-indigo-400 border-2 border-white"></div>
                   <h4 className="font-bold text-sm text-indigo-700">ç¬¬ 6 å€‹æœˆï¼šçµ•è‚²æé†’</h4>
                   <p className="text-xs text-indigo-600 mt-1">å®‰æ’çµ•è‚²æ‰‹è¡“ï¼Œç´¢å–çµ•è‚²è­‰æ˜ä»¥ç™¼æ”¾è­‰æ›¸ã€‚</p>
                 </div>
              </div>
            </Card>
         </div>
      </div>
    </div>
  );

  // --- Main Layout ---

  const NavItem = ({ id, label, icon: Icon }) => (
    <button
      onClick={() => { setActiveTab(id); setIsMobileMenuOpen(false); }}
      className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition font-medium ${
        activeTab === id 
        ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-200' 
        : 'text-slate-500 hover:bg-slate-100'
      }`}
    >
      <Icon size={20} />
      <span>{label}</span>
    </button>
  );

  return (
    <div className="min-h-screen bg-slate-50 font-sans text-slate-800 flex">
